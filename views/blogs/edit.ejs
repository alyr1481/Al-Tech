<% include ../partials/header %>

<form action="/blogs/<%= post._id %>?_method=PUT" method="post">
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" value="<%=post.author%>" name=post[author]>
  </div>
  <div class="form-group">
    <label for="posttitle">Post Title</label>
    <input type="text" class="form-control" id="posttitle" value="<%=post.title%>" name=post[title]>
  </div>
  <div class="form-group">
    <label for="postintro">Post Intro</label>
    <input type="text" class="form-control" id="postintro" value="<%=post.intro%>" name=post[intro]>
  </div>
  <div class="form-group">
    <label for="imageurl">Image URL</label>
    <input type="text" class="form-control" id="imageurl" value="<%=post.image%>" name=post[image]>
  </div>
  <div class="form-group">
    <label for="type">Post Type</label>
    <select class="form-control" id="type" name=post[postType]>
      <%if (post.postType === "Tech Review"){ %>
        <option selected>Tech Review</option>
      <%}else{%>
        <option>Tech Review</option>
      <%}%>
       <%if (post.postType === "Opinion"){ %>
        <option selected>Opinion</option>
      <%}else{%>
        <option>Opinion</option>
      <%}%>
      <%if (post.postType === "Tutorial"){ %>
        <option selected>Tutorial</option>
      <%}else{%>
        <option>Tutorial</option>
      <%}%>
       <%if (post.postType === "Movie Review"){ %>
        <option selected>Movie Review</option>
      <%}else{%>
        <option>Movie Review</option>
      <%}%>      
       <%if (post.postType === "Programming"){ %>
        <option selected>Programming</option>
      <%}else{%>
        <option>Programming</option>
      <%}%>       
    </select>
  </div>
  <div class="form-group">
    <label for="content">Post Content</label>
    <textarea class="form-control" id="content" class="editable" name=post[content]><%= post.content %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% include ../partials/footer %>
