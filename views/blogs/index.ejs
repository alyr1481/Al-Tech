<% include ../partials/header %>

<p>
  <a href="/blogs/new" class="btn-floating btn-large waves-effect waves-light blue right"><i class="material-icons">add</i></a>
  <h4>Recent Blogs</h4>
  <hr>
</p>


<% posts.reverse().forEach(function(post){ %>
<div class="row">
  <div class="col-md-5 mb-r">
      <div class="view overlay hm-white-slight">
      <img src="<%=post.image%>" alt="First sample image" style="width: 100%;">
      <a>
      <div class="mask waves-effect waves-light"></div>
      </a>
    </div>
  </div>
  <div class="col-md-7 mb-r">
    <% if (post.postType == "Tech Review"){ %>
      <a href="" class="light-blue-text"><h5><i class="fa fa-desktop"></i> Tech Review</h5></a>
    <% } %>
    <% if (post.postType === "Opinion"){ %>
      <a href="" class="light-green-text"><h5><i class="fa fa-commenting"></i> Opinion</h5></a>
    <% } %>
    <% if (post.postType === "Tutorial"){ %>
      <a href="" class="red-text"><h5><i class="fa fa-graduation-cap" aria-hidden="true"></i> Tutorial</h5></a>
    <% } %>
    <h4><%=post.title%></h4>
    <p><%-post.intro%></p>
    <p>by <a><strong><%=post.author%></strong></a>, 26/08/2016</p>
    <a class="btn btn-primary" href="/blogs/<%=post.id%>">Read more</a>
  </div>
</div>
<%});%>

<% include ../partials/footer %>
