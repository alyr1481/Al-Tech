<% include ../partials/header %>



<!--Section: Blog v.4-->
<section class="section section-blog-fw">
  <!--First row-->
  <div class="row">
    <div class="col-md-12">
    <!--Featured image-->
    <div class="view overlay hm-white-slight">
      <%if (post.imageFile){ %>
        <img src="<%=post.imageFile%>">
      <%} else {%>
        <img src="<%=post.imageURL%>">
      <%}%>
      <a>
      <div class=""></div>
        </a>
    </div>

    <!--Post data-->
    <div class="jumbotron">
      <h2><a><%=post.title%></a></h2>
      <p>Written by <a><%=post.author%></a>, 26/08/2016</p>

      <a class="btn btn-default ">
        <i class="fa fa-comments-o left "></i>
        <span class="hidden-md-down ">Comments</span>
      </a>
      <a class="btn btn-warning " href="/blogs/<%=post.id%>/edit">
        <i class="fa fa-edit left "></i>
        <span class="hidden-md-down ">Edit Post</span>
      </a>
        <form action="/blogs/<%=post._id%>?_method=DELETE" method="POST" class="delete-form">
          <button class="btn btn-danger"><span class="hidden-md-down "><i class="fa fa-close"></i> Delete Post</span></button>
        </form>
      </a>
    </div>


    <!--Excerpt-->
    <div class="excerpt">
      <p><%-post.content%></p>
    </div>
  </div>
</div>
<!--/First row-->

<hr class="hr-mobile">


<% include ../partials/footer %>