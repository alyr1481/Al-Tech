<% include partials/header %>

<p>
  <a href="/posts/new" class="btn-floating btn-large waves-effect waves-light blue right"><i class="material-icons">add</i></a>
  <h4>Recent Blogs</h4>
</p>
<div class="divider"></div>

<div class="section">
<div class="row">
  <% posts.forEach(function(post){ %>
  <div class="col s12 m6 l4" style="display: flex; flex-wrap: wrap;">
    <a href="/blogs/<%= post._id %>">
      <div class="card">
        <div class="card-image">
          <img src="<%= post.image %>">
        </div>
        <div class="divider"></div>
        <div class="card-content">
          <span class="card-title"> <%= post.title %></span>
          <p><%- post.content.substring(0, 100) %>...</p>
        </div>
      </div>
    </div>
  </a>
  <% }) %>
</div>
</div>

<% include partials/footer %>
