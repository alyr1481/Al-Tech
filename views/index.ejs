<% include partials/header %>

<p>
  <a href="/blogs/new" class="btn-floating btn-large waves-effect waves-light blue right"><i class="material-icons">add</i></a>
  <h4>Recent Blogs</h4>
</p>
<div class="divider"></div>


<div class="row">
  <% posts.reverse().forEach(function(post){ %>
  <div class="col s12 m6 l4 cards-container" style="display: flex;">
    <div class="card">
      <a href="/blogs/<%=post.id%>" class="card-link">
        <div class="card-image"><img src="<%=post.image%>"/></div>
        <div class="divider"></div>
        <div class="card-content">
          <span class="card-title"><%=post.title%></span>
          <p><%-post.content.substring(0,100)%>...</p>
        </div>
      </a>
    </div>
  </div>
  <%});%>
</div>


<% include partials/footer %>
