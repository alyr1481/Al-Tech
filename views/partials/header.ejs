<!DOCTYPE html>
<html>
  <head>
    <!-- Make site responsive on mobile/tablet -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Al-Tech</title>

    <!-- BootStrap Inits -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/stylesheets/mdb.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/main.css">

    <link rel="shortcut icon" type="image/x-icon" href="/assets/Al-Tech-LOGO.png" />

    <script type="text/javascript" src="/js/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>

    <link rel="stylesheet" href="/stylesheets/croppie/croppie.css">
    <script type="text/javascript" src="/js/croppie/croppie.min.js"></script>

  </head>
  <body>

    <nav class="navbar navbar-toggleable-md navbar-dark bg-primary scrolling-navbar fixed-top">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">
        <strong>Al-Tech</strong>
      </a>
      <div class="collapse navbar-collapse" id="navbarNav1">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/services">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blogs">Blogs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact Us</a>
          </li>   
          <%if(currentUser && currentUser.isAdmin){%>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Portal</a>
            </li>
          <%}%>
          <li class="nav-item dropdown btn-group">
        </ul>
        <% if(!currentUser){ %>
            <a class="nav-item nav-link" data-toggle="modal" data-target="#loginModal">Login</a>
            <a class="nav-item nav-link" data-toggle="modal" data-target="#registerModal">Register</a>
        <% } else { %>
            <a class="nav-item nav-link" href="/users/profile/<%=currentUser._id%>"><img class="navbarAvatar" src="<%=currentUser.avatar%>"/> <%= currentUser.username %></a>
            <a class="nav-item nav-link" href="/users/logout">Logout</a>
        <% } %>
      </div>
    </nav>

    <%if(error || success){%>
      <div class="container">
        <% if(error && error.length > 0){ %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        <% if(success && success.length > 0){ %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
        <% } %>
      </div>
    <%}%>  

