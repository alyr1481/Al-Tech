<!-- Modal -->
<div class="modal fade" id="changeAvatar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <!--Content-->
    <div class="modal-content">
      <!--Header-->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title w-100" id="myModalLabel">Upload New Avatar</h4>
      </div>
      <!--Body-->
      <div class="modal-body">
        <form action="/users/profile/<%=user.id%>?_method=PUT" method="post" enctype="multipart/form-data" id="avatarUploadForm">
          <div class="file-field">
          <div class="btn btn-primary btn-sm ">
            <span>Choose file</span>
            <input type="file" id="fileupload" name="imageFile" class="fileUploadButton">
          </div>
          <div class="file-path-wrapper" style="margin-top:18px;">
            <input class="file-path validate" type="text" placeholder="Upload your file" name="user[avatar]">
          </div>
        </div>
      </div>
      <!--Footer-->
      <div class="modal-footer">
          <a class="btn btn-success btn-block" href="javascript:void()" onclick="document.getElementById('avatarUploadForm').submit();">
            <i class="fa fa-upload"></i>
            <span class="hidden-md-down"> Upload Avatar</span>
          </a>
        </form>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>
<!-- Modal -->
