<!-- Modal -->
<div class="modal fade" id="changePassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <!--Content-->
    <div class="modal-content">
      <!--Header-->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title w-100" id="myModalLabel">Change Password</h4>
      </div>
      <!--Body-->
      <div class="modal-body">
        <form action="/users/profile/<%=user.id%>/changepwd?_method=PUT" method="post" id="changePasswordForm" class="valid">
          <div class="form-group">
            <label for="">Enter New Password</label>
            <input type="password" name="user[password]">
          </div>
          <div class="form-group">
            <label for="">Confirm Password</label>
            <input type="password" name="user[passwordConfirm]">
          </div>
      </div>
      <!--Footer-->
      <div class="modal-footer">
          <a class="btn btn-warning btn-block" href="javascript:void()" onclick="document.getElementById('changePasswordForm').submit();">
            <i class="fa fa-exclamation-triangle"></i>
            <span class="hidden-md-down"> Change Password</span>
          </a>
        </form>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>
<!-- Modal -->
