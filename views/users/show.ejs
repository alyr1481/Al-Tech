<% include ../partials/header %>
<% include ../partials/container_header %>

<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="view userAvatar">
                  <div id="avatarWrapper">
                    <img src="<%=user.avatar%>" style="object-fit: contain">
                  </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
              <a class="btn btn-primary btn-block" style="width:350px;" data-toggle="modal" data-target="#changeAvatar">Upload New Avatar</a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
          <h1><%=user.username%> - Profile Page</h1>
        </div>
        <div class="row" style="margin-top:30px;">
          <div class="col-md-12" style="padding-left: 0px; padding-right:0px;">
            <label for="bio"><%=user.username%> - Biography</label>
            <textarea id="bio" class="userBio" disabled><%=user.bio%></textarea>
            <a class="btn btn-primary btn-block" href="">Edit <%=user.username%>'s Bio</a>
          </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top:20px;">
  <div class="col-md-6" style="padding-right:5px; padding-left:0px;">
    <a class="btn btn-warning btn-block">Change Password</a>
  </div>
  <div class="col-md-6" style="padding-right:0px; padding-left:5px;">
    <a class="btn btn-danger btn-block" style="width: 100%;">Delete Account</a>
  </div>
</div>


<% include ../partials/users/changeAvatar %>
<% include ../partials/container_footer %>
<% include ../partials/footer %>
